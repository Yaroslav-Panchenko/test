/* TT Norms Regular */
@font-face {
  font-display: swap;
  font-family: 'TTNorms';
  font-weight: 400;
  src: url('https://fonts.hlxcdn.com/fonts/tt-norms/TTNorms-Regular.woff');
}

/* TT Norms Medium */
@font-face {
  font-display: swap;
  font-family: 'TTNorms';
  font-weight: 500;
  src: url('https://fonts.hlxcdn.com/fonts/tt-norms/TTNorms-Medium.woff');
}

/* TT Norms Bold */
@font-face {
  font-display: swap;
  font-family: 'TTNorms';
  font-weight: 700;
  src: url('https://fonts.hlxcdn.com/fonts/tt-norms/TTNorms-Bold.woff');
}

p {
  margin: 0;
}

.tabs {
  background-color: #fff;
  @media screen and (max-width: 768px) {
    .slick-list {
      padding: 0 30px 0 10px;
    }
  }
}

.tabs__container {
  max-width: 1062px;
  width: 100%;
  margin: 0 auto;
  padding: 61px 0;

  @media screen and (max-width: 768px) {
    padding: 41px 0;
  }
}

.section__title {
  text-align: center;
  max-width: 600px;
  margin: 0 auto 9px;
  color: #363636;
  font: 700 34px/1.18 TTNorms, sans-serif;
  text-transform: none;
  letter-spacing: normal;

  @media screen and (max-width: 768px) {
    font: 700 28px/1.18 TTNorms, sans-serif;
    padding: 0 20px;
  }
}

.section__description {
  font: 400 16px/1.63 TTNorms, sans-serif;
  text-align: center;
  max-width: 623px;
  margin: 0 auto 59px;

  @media screen and (max-width: 768px) {
    padding: 0 20px;
    margin: 0 auto 38px;
  }
}

.tabs__nav {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 38px;

  @media screen and (max-width: 768px) {
    display: none;
  }

}

.tabs__nav-item {
  font: 500 20px/1 TTNorms, sans-serif;
  color: #ababab;
  margin: 0 25px;
  transition: .2s linear;
  cursor: pointer;
}

.tab__content-item {
  display: none;
  padding: 62px 65px 129px;
  box-shadow: 0 0 44px 10px rgba(216, 216, 216, .5);
  margin: 0;
  position: relative;
  background-color: #fff;

  @media screen and (max-width: 768px) {
    padding: 20px 20px 33px;
    margin: 0 10px 20px;
    box-shadow: none;
  }
}

.tab__content-item.active {
  display: block;
}

.tabs__nav-item.active {
  color: #4b94c6;
}

.tab__item-text {
  width: 50%;
  max-width: 372px;
  margin-right: 10px;

  @media screen and (max-width: 768px) {
    width: 100%;
    max-width: none;
    order: 1;
  }
}

.tabs__item-title--mob {
  text-align: center;
  display: none;
  font: 700 24px/1.33 TTNorms, sans-serif;
  margin-bottom: 20px;

  @media screen and (max-width: 768px) {
    display: block;
  }
}

.tabs__item-title {
  font: 700 24px/1.33 TTNorms, sans-serif;
  margin-bottom: 30px;

  @media screen and (max-width: 768px) {
    display: none;
  }
}

.tab__item-descr p {
  font: 400 16px/1.63 TTNorms, sans-serif;
  color: #383838;
}

.tab__image {
  max-width: 415px;
  height: auto;
}

.tab__item-wrapper {
  display: flex;
  justify-content: space-between;

  @media screen and (max-width: 768px) {
    flex-direction: column;
    order: 2;
  }
}

.tab__img-wrapper {
  width: 50%;
  text-align: right;

  @media screen and (max-width: 768px) {
    width: 100%;
    text-align: center;
    margin-bottom: 24px;
  }

  img {
    width: 100%;
    margin: 0 auto;
  }
}

.slick-dots {
  display: flex;
  justify-content: center;
  margin: 20px;

  li {
    width: 8px;
    height: 8px;
    background-color: #dfdfdf;
    border-radius: 50%;
    margin: 0 5px;
    cursor: pointer;
  }

  .slick-active {
    background-color: #9a9a9a;
  }
}

.future__container {
  max-width: 1062px;
  width: 100%;
  margin: 0 auto;
  padding: 60px 65px;
  border-bottom: solid 1px #d7d7d7;

  @media screen and (max-width: 768px) {
    padding: 40px 20px;
    border: none;
  }
}

.future__title {
  margin: 0 0 30px;
  font: 700 34px/1.18 TTNorms, sans-serif;
  letter-spacing: normal;
  text-align: center;
  color: #363636;
  text-transform: none;

  @media screen and (max-width: 768px) {
    margin: 0 0 10px;
  }
}

.future__subtitle {
  font: 400 16px/1.63 TTNorms, sans-serif;
  letter-spacing: normal;
  color: #383838;
  max-width: 600px;
  margin: 0 auto 30px;
  text-align: center;
}

.future__tabs {
  position: relative;
}

.future__tabs-item {
  width: 45%;
  max-width: 372px;

  @media screen and (max-width: 768px) {
    width: 100%;
    max-width: none;
  }
}

.future__tabs-item.active {
  .future__tabs-header {
    border: none;
  }
  .future__tabs-heading {
    color: #383838;
  }
  .future__tabs-content {
    display: block;
  }

  .future__tabs-icon {
    transform: rotate(0);
    path {
      fill: #383838;
    }
  }
}

.future__tabs-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
  padding: 20px 0;
  border-bottom: solid 1px #d7d7d7;
  border-top: solid 1px #d7d7d7;
}

.future__tabs-heading {
  font: 700 20px/1.5 TTNorms, sans-serif;
  color: #ababab;
  margin-bottom: 0;
}

.future__tabs-content {
  display: none;
}

.future__tabs-img {
  position: absolute;
  max-width: 467px;
  width: 50%;
  object-fit: cover;
  box-shadow: 0 0 28px 6px rgba(216,216,216,.5);
  display: block;
  top: 0;
  right: 0;
  margin: 0;

  @media screen and (max-width: 768px) {
    width: 100%;
    position: static;
    top: auto;
    right: auto;
    margin: 0 auto 24px;
  }
}

.future__tabs-description {
  padding-bottom: 15px;
  font: 400 16px/1.63 TTNorms, sans-serif;
  line-height: 1.63;
  letter-spacing: normal;
}

.future__tabs-icon {
  transform: rotate(180deg);
}
